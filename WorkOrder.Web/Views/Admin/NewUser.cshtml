@using WorkOrder.Core.Entities
@model CreateUserRequest
@{
    ViewData["Title"] = "NewUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!doctype html>
<html lang="en">
  <head>
  	<title>Login 08</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="~/template/login-form-18/css/style.css">

	</head>
	<body>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<form method="post">
							<div class="row">
								<div class="form-group col-md-6">
							  <label for="InputName mb-2">İsim</label>
							  <input type="text" name="Name" class="form-control" id="InputName" placeholder="İsim Giriniz" required="">
							</div>
							<div class="form-group col-md-6">
							  <label for="InputLastName mb-2">Soyisim</label>
							  <input type="text" name="LastName" class="form-control" id="InputLastName" placeholder="Soyisim Giriniz" required="">
							</div>
							</div>
							<div class="row">
								<div class="form-group col-md-6">
							  <label for="InputUserName">Kullanıcı Adı</label>
							  <input type="text" name="UserName" class="form-control" id="InputUserName" placeholder="KullanıcıAdı Giriniz" required="">
							</div>
							<div class="form-group col-md-6">
							  <label for="InputTelNo">Tel No</label>
							  <input type="tel" name="PhoneNumber" class="form-control" id="InputTelNo" placeholder="Tel No Giriniz" required="">
							</div>
							</div>
							<div class="form-group">
							  <label for="exampleInputEmail1 mb-2">Email address</label>
							  <input type="email" name="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
							</div>
							<div class="row">
								<div class="form-group col-md-6">
									<label for="InputPassword mb-2">Şifre</label>
									<input type="password" name="Password" class="form-control" id="InputPassword" placeholder="***" required="">
							</div>
							<div class="form-group col-md-6">
										<fieldset>
											<label >Departman</label>
											@Html.DropDownListFor(x => x.Department, (IEnumerable<SelectListItem>) ViewBag.Departments)
										</fieldset>
							</div>
							</div>
							<div class="row justify-content-center">
								<button type="submit" class="btn btn-primary submit mb-4 justify-content-center">Kaydet</button>
							</div>
						  </form>
	        </div>
				</div>
			</div>
		</div>

  <script src="~/template/login-form-18/js/jquery.min.js"></script>
  <script src="~/template/login-form-18/js/popper.js"></script>
  <script src="~/template/login-form-18/js/bootstrap.min.js"></script>
  <script src="~/template/login-form-18/js/main.js"></script>

	</body>
</html>


@model WorkOrder.Core.Entities.WorkPlace
@{
    ViewData["Title"] = "EditWorkPlace";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Güncelle</h2>
<br />

@using(Html.BeginForm("UpdateWorkPlace" , "Admin", FormMethod.Post))
{
     <div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<form method="post">
							<div class="form-group">
								 <div class="d-none">
									 @Html.LabelFor(m => m.Id)
									 @Html.TextBoxFor(m => m.Id)
								 </div>
							</div>
							<div class="row">
								<div class="form-group col-md-6">
									@Html.Label("İsim:")
									@Html.TextBoxFor(m => m.Name, new { @class="form-control" })
							</div>
							<div class="form-group col-md-6">
									@Html.Label("İş Yeri Tipi:")
									@Html.DropDownListFor(m => m.WorkPLaceType, (IEnumerable<SelectListItem>) ViewBag.Departments, new { @class="form-control" })
							</div>
							</div>
								<div class="form-group">
									@Html.Label("Adres:")
									@Html.TextAreaFor(m => m.Adress, new { @class="form-control" })
								</div>
								<div class="form-group">
									@Html.Label("Açıklama:")
									@Html.TextAreaFor(m => m.Description, new { @class="form-control" })
								</div>
							<div class="row justify-content-center">
								<button type="submit" class="btn btn-primary submit mb-4 justify-content-center">Kaydet</button>
							</div>
						  </form>

	        </div>
				</div>
			</div>
		</div>
    
}


@model WorkOrder.Core.Entities.Notification

@{
    ViewData["Title"] = "EditNotification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Güncelle</h2>
<br />

@using(Html.BeginForm("UpdateNotification" , "Admin", FormMethod.Post))
{
     <div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<form method="post">
                            <div class="d-none">
                                @Html.LabelFor(m => m.Id)
                                @Html.TextBoxFor(m => m.Id)
                            </div>
							<div class="form-group ">
                                @Html.Label("Başlık")
                                @Html.TextBoxFor(m =>m.Header, new { @class="form-control" })
							</div>
                            <div class="form-group ">
                                @Html.Label("Body")
                                @Html.TextAreaFor(m =>m.Body, new { @class="form-control" })
							</div>
                            <div class="form-group ">
                                @Html.Label("Durum")
							    @Html.DropDownListFor(m => m.CaseType, (IEnumerable<SelectListItem>) ViewBag.CaseTypes, new { @class="form-control" })
							</div>
							<div class="row justify-content-center">
								<button type="submit" class="btn btn-primary submit mb-4 mr-4 justify-content-center">Kaydet</button>
							</div>
						  </form>
	        </div>
				</div>
			</div>
		</div>
}



@using WorkOrder.Core.Entities
@model List<CaseType>
@{
    ViewData["Title"] = "Case";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Durum Kodu Tanımlama</h2>
<a href="~/Admin/NewCase" class="link-primary">Yeni Durum Kodu</a>
<br />
<br />
<table class="table " >
    <tr>
        <th>#</th>
        <th>İsim</th>
    </tr>
    @for(int i =0; i<Model.Count;i++)
    {
        <tr>
            <td>@(i+1)</td>
            <td>@Model[i].Name</td>
            <td>
               <a href="~/Admin/EditCaseType/@Model[i].Id" class="link-primary">Edit</a>|<a href="~/Admin/DeleteCase/@Model[i].Id" class="link-primary">Delete</a>
            </td>
        </tr>
    }
</table>


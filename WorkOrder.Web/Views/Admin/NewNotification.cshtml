@using WorkOrder.Core.Entities
@model Notification
@{
    ViewData["Title"] = "NewNotification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Bildirim</h2>

<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<form method="post">
								<div class="form-group ">
							  <label for="InputName">Başlık</label>
							  <input type="text" name="Header" class="form-control" id="InputName" placeholder="Başlık Giriniz" required="">
							</div>
							<div class="form-group ">
							  <label for="InputDescription">Açıklama</label>
							  <textarea  name="Body" class="form-control" id="InputDescription" placeholder="Açıklama Giriniz" required="" ></textarea>
							</div>
							<div class="form-group ">
										<fieldset>
											<label >Durum</label>
											@Html.DropDownListFor(x => x.CaseType, (IEnumerable<SelectListItem>) ViewBag.CaseTypes)
										</fieldset>
							</div>
							<div class="row justify-content-center">
								<button type="submit" class="btn btn-primary submit mb-4 mr-4 justify-content-center">Kaydet</button>
							</div>
						  </form>
	        </div>
				</div>
			</div>
		</div>